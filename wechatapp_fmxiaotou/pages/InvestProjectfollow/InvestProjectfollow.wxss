
.header{
  height: 80rpx;
  line-height: 80rpx;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: -2rpx;
  left: 0rpx;
  right: 0rpx;
  background-color: #fff;
  border-bottom: 1px solid #e7e7e7;
  z-index: 3;
  padding: 0rpx 30rpx;
}
/*顶部的全部按钮*/
.ActionSheetBoc{
 display: -webkit-flex;
 background-color:#fff;
 font-size: 28rpx;
text-align: center;
width: 100%;
position: fixed;
top: -106rpx;
left: 0rpx;
right: 0;
z-index: 1;
}
.ActionSheetBoc view{
  line-height: 60rpx;
}
.arrowBox{
  display: -webkit-flex;
  align-items: center;
  font-size: 28rpx;
  margin-left: 36rpx;
}
/*向下*/
.triangle_border_down{
    width:10rpx;
    height:10rpx;
    background: #fff;
    border-left: 1rpx solid #666;
    border-bottom: 1rpx solid #666;
  	transition: transform .5s;
  	transform:rotate(-45deg);
    margin-bottom: 2rpx;
    margin-left: 20rpx;
}

.triangle_border_down.transition{
	transform:rotate(135deg);
}
/*tab str*/
.body{
  width: 100%;
  height: 90rpx;
  background: #f5f5f5;
 position:fixed;
  left:50%;
  top:0rpx; 
  transform: translateX(-50%);
  display:flex;
  flex-direction:row;
  justify-content: center;
  align-items: center;
  background:#fff;
}
.nav{
  width:80%;
  height: 60rpx;
  display:flex;
  flex-direction:row;
  justify-content: center;
  align-items: center;
}
.default{
  line-height: 60rpx;
  text-align:center;
  flex:1;
  color:#000;
  font-size:24rpx;
  border:1rpx solid rgb(255,219,96);
}
.red{
  line-height:60rpx;
  text-align:center;
  color:#fff;
  background: rgb(255,219,96);
  flex:1;
 font-size:24rpx;
border:1rpx solid rgb(255,219,96);
}
.show{
  display:block;
  text-align:center;
  line-height:200rpx;
}
.hidden{
  display:none;
  text-align:center;
  line-height:200px;
}

/*tab end*/


.box{
  width: 100%;
  background-color: #fff;
  border-bottom: 1rpx solid #ececec;
  border-top: 1rpx solid #ececec;
  margin-bottom: 20rpx;
}
.nameBox{
	display: flex;
	align-items: center;
  margin-top: 13px;
  font-size: 24rpx;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
}
.nameBox image{
  width: 45px;
  height: 45px;
	border-radius:50%;
  margin-right: 10px;
}
.nameBox .time{
	color: #969696;
  margin-top: 2px
}
.investlarImg image{
    width: 100%;
    height: 200px;
}
.disc{
    box-sizing: border-box;
    padding: 20rpx;
    font-family: "微软雅黑";
}
.disc .name {
    width: 100%;
    font-size: 30rpx;
}
.disc .about{
    width: 100%;
    font-size: 12px;
    color: rgb(150,150,150);
}
#about{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}
.progress{
    margin-top: 15px;
    padding: 6px;
}
.progress .father{
    width: 100%;
    height: 4px;
    border-radius: 2px;
    background-color: rgba(150, 150, 150, 0.29)
}
.son{
    height: 100%;
    border-radius: 2px;
    /*background-color: rgba(255, 0, 0, 0.52);*/
}
.percent{
    margin-top: 10px;
    text-align: center;
    font-size: 12px;
    color: #E6AD14;
}
.percent span{
    color: rgb(175,135,54);
}
