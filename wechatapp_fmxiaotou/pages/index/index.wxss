/**引入tabbar的样式**/
/* @import "../tabBar/tabBar.wxss"; */
page{
  box-sizing: border-box;
  background: rgb(245,245,245);
}
.header{
  height: 80rpx;
  line-height: 80rpx;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  top: -2rpx;
  left: 0rpx;
  right: 0rpx;
  background-color: #fff;
  border-bottom: 1px solid #e7e7e7;
  z-index: 3;
  padding: 0rpx 30rpx;
}
.redDot{
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: red;
  position: fixed;
  top: 10rpx;
  right: 25rpx;
}
/*顶部的全部按钮*/
.ActionSheetBoc{
display: -webkit-flex;
background-color:#fff;
font-size: 28rpx;
text-align: center;
width: 100%;
padding-bottom: 7rpx;
position: fixed;
top: -106rpx;
left: 0rpx;
right: 0;
z-index: 1;
}
.ActionSheetBoc view{
  line-height: 60rpx;
}
.arrowBox{
  display: -webkit-flex;
  align-items: center;
  font-size: 28rpx;
  margin-left: 36rpx;
}
/*向下*/
.triangle_border_down{
    width:10rpx;
    height:10rpx;
    background: #fff;
    border-left: 1rpx solid #666;
    border-bottom: 1rpx solid #666;
  	transition: transform .5s;
  	transform:rotate(-45deg);
    margin-bottom: 2rpx;
    margin-left: 10rpx;
}

  .triangle_border_down.transition{
	transform:rotate(135deg);
}  

.box{
  width: 100%;
  background-color: #fff;
  border-bottom: 1rpx solid #ececec;
  border-top: 1rpx solid #ececec;
  margin-bottom: 20rpx;
}
.nameBox{
	display: flex;
	align-items: center;
  margin-top: 13px;
  font-size: 24rpx;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
}
.nameBox image{
  width: 45px;
  height: 45px;
	border-radius:50%;
  margin-right: 10px;
}
.nameBox .time{
	color: #969696;
  margin-top: 2px
}
.investlarImg image{
    width: 100%;
    height: 200px;
}
.disc{
    box-sizing: border-box;
    padding: 20rpx;
    font-family: "微软雅黑";
}
.disc .name {
    width: 100%;
    font-size: 30rpx;
}
.disc .about{
    width: 100%;
    font-size: 12px;
    color: rgb(150,150,150);
}
#about{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}
.progress{
    margin-top: 15px;
    width: 100%;
    padding-top:6px;
}
.progress .father{
    width: 100%;
    height: 4px;
    border-radius: 2px;
    background-color: rgba(150, 150, 150, 0.29)
}
.son{
    height: 100%;
    border-radius: 2px;
    /*background-color: rgba(255, 0, 0, 0.52);*/
}
.percent{
    margin-top: 10px;
    text-align: center;
    font-size: 12px;
    color: #E6AD14;
}
#ketou{
  color: #333;
}
.percent span{
    color: rgb(175,135,54);
}
