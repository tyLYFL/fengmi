page{
  width: 100%;
  height: 100%;
}
image{
  display: block;
  width: 100%;
  height: 100%;
}
.box{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  padding: 150px 40px;
  box-sizing: border-box;
}
.username,.password{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #e7e7e7;
  font-size: 12px;
  font-family: 微软雅黑;
}
.username input,.password input{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}
.login,.loginbyWx{
  width: 100%;
  margin-top: 20px;
  background-color: #fff;
  border-radius: 30px;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-family: 微软雅黑;
  font-size: 14px;
  color: gray;
}
.loginbyWx{
  background-color: #42c76b;
  color: #fff
}
.loginbyWx image{
  width: 28px;
  height: 28px;
  display: inline-block;
  vertical-align: middle;
  margin-right: 10px;
}
.or{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 auto;
  text-align: center;
  margin-top: 20px;
  font-family: 微软雅黑;
  color: gray;
  font-size: 14px;
}
.or text{
  line-height: 100rpx;
  display: inline-block;
  border-bottom: 1px solid gray;
  width: 60px;
  margin-right: 10px;
  margin-left: 10px;
  height: 1px;
}
.yellow{
  color: #ffffff;
  background-color: #E6AD14;
}
