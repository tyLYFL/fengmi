page{
  background-color: rgba(245, 245, 245, 1);
  width: 100%;
  height: 100%;
  font-family: 微软雅黑;
  font-size: 14px;
  color: #333;
}
.box{
  position: absolute;
  left: 0;
  top: 270rpx;
  width: 100%;
  height: 100%;
  padding: 0px 40px;
  box-sizing: border-box;
}
.Name{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #e7e7e7;
  font-size: 12px;
  font-family: 微软雅黑;
  position: relative;
  background: #fff;
  margin-top:30rpx;
}
.Name input{
  width: 100%;
  height: 100rpx;
  padding-left:36rpx;
  line-height: 100rpx;
}
.clear{
  width:32rpx;
  height:32rpx;
  position:absolute;
  right:40rpx;
  top:10rpx;
  z-index: 333;
  opacity: 1
}
.clear image{
  width:32rpx;
  height:32rpx;
}
.clearstate{
  opacity: 0
}
.num{
  text-align: right;
  width: 720rpx;
  margin-right: 30rpx;
  line-height: 50rpx;
}
.save{
  width: 100%;
  margin-top: 20px;
  background-color: #ffdb60;
  border-radius: 5rpx;
  color: #646464;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-family: 微软雅黑;
  font-size: 14px;
}
.save::after{
  border: none;
}