page{
  background-color: rgba(245, 245, 245, 1);
  width: 100%;
  height: 100%;
  font-family: 微软雅黑;
  font-size: 14px;
  color: #333;
}
.box{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  padding: 0px 40px;
  box-sizing: border-box;
}
.mobile,.verification,.password{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #e7e7e7;
  font-size: 12px;
  font-family: 微软雅黑;
  position: relative;
}
.mobile input,.verification input,.password input{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}
.authcode{
  position: absolute;
  top:0px;
  right:0px;
  color:#e6ad14;
}
.showPassword{
  position: absolute;
  top:0px;
  right:0px;
}
.changePassword{
  width: 100%;
  margin-top: 20px;
  background-color: #ffdb60;
  border-radius: 30px;
  color: #646464;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-family: 微软雅黑;
  font-size: 14px;
}
.changePassword::after{
  border: none;
}